<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="com.vinaylogics.hibernate_tutorial.hibernate_core.xml_configuration.models.Employee">
    <id name="id">
        <generator class="assigned"/>
    </id>
    <property name="firstName"/>
    <property name="lastName"/>
    <component name="address" class="com.vinaylogics.hibernate_tutorial.hibernate_core.xml_configuration.models.Address">
        <property name="country"/>
        <property name="city"/>
        <property name="pinCode"/>
    </component>
</class>
</hibernate-mapping>